x=300
y=200
def setup():
    size(600,400)
def draw():
    global x,y,z
    background(0)
    if mousePressed==True:
        if mouseButton==LEFT:
            ellipse(mouseX,mouseY,50,50)
            x=x+1
            y=y+1
        if mouseButton==RIGHT:
            ellipse(mouseX,mouseY,50,50)
            x=x-1
            y=y-1
    else:
        ellipse(300,200,50,50)

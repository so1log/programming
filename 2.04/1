def setup():
    size(600,400)
    frameRate(40)
def draw():
    if mousePressed==True:
        if mouseButton==LEFT:
           fill(100,100,100)
           ellipse(floor(random(width)),floor(random(height)),floor(random(40)),floor(random(40)))
    else:
        background(0)
